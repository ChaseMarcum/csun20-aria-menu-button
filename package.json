{
  "name": "csun20-aria-options-menu",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:dequelabs/csun20-aria-options-menu.git",
  "author": "<schne324@gmail.com>",
  "license": "UNLICENSED",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-stage-0": "^7.8.3",
    "axe-core": "^3.5.1",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "babel-polyfill": "^6.26.0",
    "cauldron-react": "^5.0.0-canary.c95dd0e0",
    "deque-pattern-library": "^7.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-puppeteer": "^4.4.0",
    "lint-staged": "^9.5.0",
    "parcel": "^1.12.4",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.1.2",
    "simulant": "^0.2.2"
  },
  "scripts": {
    "build": "parcel build demo/index.html",
    "dev": "parcel demo/index.html",
    "lint": "eslint .",
    "fmt": "prettier --write *.{js,md} **/*.{js,md}",
    "test": "jest",
    "test:unit": "jest --projects unit",
    "test:e2e": "jest --projects e2e"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,md,json,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "test": {
        "plugins": [
          "@babel/plugin-transform-runtime"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "react",
      "jsx-a11y"
    ],
    "settings": {
      "react": {
        "version": "16"
      }
    },
    "overrides": [
      {
        "files": [
          "e2e/**/*.js",
          "**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "globals": {
          "page": true
        }
      }
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 60,
    "bracketSpacing": true,
    "useTabs": false,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "jest": {
    "projects": [
      {
        "displayName": "unit",
        "collectCoverageFrom": [
          "index.js"
        ],
        "testMatch": [
          "**/*.test.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>test-utils/setupTests.js"
        ],
        "moduleNameMapper": {
          "\\.(css)$": "<rootDir>test-utils/styleMock.js"
        }
      },
      {
        "displayName": "e2e",
        "testMatch": [
          "**/e2e/index.js"
        ],
        "setupFilesAfterEnv": [
          "<rootDir>test-utils/setupTests.js"
        ],
        "moduleNameMapper": {
          "\\.(css)$": "<rootDir>test-utils/styleMock.js"
        },
        "preset": "jest-puppeteer"
      }
    ]
  },
  "dependencies": {
    "puppeteer": "^2.1.1"
  }
}
